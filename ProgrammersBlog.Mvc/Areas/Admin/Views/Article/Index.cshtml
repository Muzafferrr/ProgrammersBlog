@using ProgrammersBlog.Shared.Utilities.Results.ComplexTypes
@model ProgrammersBlog.Entities.Dtos.ArticleListDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Makaleler Index";
}
@if (Model.ResultStatus == ResultStatus.Success)
{
    <div id="modalPlaceHolder" aria-hidden="true"></div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Makaleler
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="articlesTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kategori</th>
                            <th>Başlık</th>
                            <th>Küçük Resim</th>
                            <th>Tarih</th>
                            <th>Okunma Sayısı</th>
                            <th>Yorum Sayısı</th>
                            <th>Aktif Mi?</th>
                            <th>Silinmiş Mi?</th>
                            <th>Oluşturulma Tarihi</th>
                            <th>Oluşturan Kullanıcı Adı</th>
                            <th>Son Düzenlenme Tarihi</th>
                            <th>Son Düzenleyen Kullanıcı Adı</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>#</th>
                            <th>Kategori</th>
                            <th>Başlık</th>
                            <th>Küçük Resim</th>
                            <th>Tarih</th>
                            <th>Okunma Sayısı</th>
                            <th>Yorum Sayısı</th>
                            <th>Aktif Mi?</th>
                            <th>Silinmiş Mi?</th>
                            <th>Oluşturulma Tarihi</th>
                            <th>Oluşturan Kullanıcı Adı</th>
                            <th>Son Düzenlenme Tarihi</th>
                            <th>Son Düzenleyen Kullanıcı Adı</th>
                            <th>İşlemler</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var article in Model.Articles)
                        {
                        <tr>
                            <td>@article.Id</td>
                            <td>@article.Category.Name</td>
                            <td>@article.Title</td>
                            <td><img src="~/img/@article.Thumbnail" class="my-image-table" /></td>
                            <td>@article.Date.ToShortDateString()</td>
                            <td>@article.ViewCount</td>
                            <td>@article.CommentCount</td>
                            <td>@(article.IsActive ? "Evet" : "Hayır")</td>
                            <td>@(article.IsDeleted ? "Evet" : "Hayır")</td>
                            <td>@article.CreatedDate.ToShortDateString()</td>
                            <td>@article.CreatedByName</td>
                            <td>@article.ModifiedDate.ToShortDateString()</td>
                            <td>@article.ModifiedByName</td>
                            <td>
                                <button class="btn btn-primary btn-sm btn-update" data-id="@article.Id"><span class="fas fa-edit"></span></button>
                                <button class="btn btn-danger btn-sm btn-delete" data-id="@article.Id"><span class="fas fa-minus-circle"></span></button>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
@if (Model.ResultStatus == ResultStatus.Error)
{
    <div class="alert alert-danger mt-3">
        @Model.Message <br />
        Dashboard sayfasına geri dönmek için lütfen <a class="alert-link" asp-area="Admin" asp-controller="Home" asp-action="Index">tıklayınız.</a>
    </div>
}
@section Scripts
{
    <script src="~/js/articleIndex.js" type="application/ecmascript"></script>
}